<MudPaper Class="pa-8 ma-2" Elevation="3">
    <MudGrid Justify="Justify.SpaceEvenly">
        @foreach (var cateType in Enum.GetValues(typeof(CategoryType)))
        {
            <MudItem xs="6">
                <MudPaper Elevation="3" Class="d-flex flex-column align-center justify-center mud-width-full py-1">
                    <MudNumericField FullWidth="true" Label="@cateType.ToString()" Class="py-3 px-3" Min="0.0" Variant="Variant.Filled"/>
                </MudPaper>
            </MudItem>
        }
    </MudGrid>
</MudPaper>

